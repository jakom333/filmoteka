<svg class="modal-button" aria-label="close-button">
    <use href="../images/symbol-defs.svg#icon-cancel"></use>
</svg>

<div class="poster-box">

    {{#if poster_path}} <img class="poster film-pic"
        src="https://www.themoviedb.org/t/p/w600_and_h900_bestv2/{{poster_path}}" alt="a poster to {{title}} film">
    {{else}} <img class="poster film-pic"
        src="https://www.genius100visions.com/wp-content/uploads/2017/09/placeholder-vertical.jpg"
        alt="no poster availiable to {{title}} film">
    {{/if}}

    <div class="trailer-box-svg">
        <svg class="trailer-box-svg-on" data-id="{{id}}">
            <use href=" ../images/symbol-defs.svg#icon-play3"></use>
        </svg>
    </div>
</div>

<div class="film-data">
    <p class="film-title">{{title}}</p>

    <table class="film-info-box">
        <tr>
            <td id="col1" class="film-info vote">
                {{#if lang }} Rating / Votes
                {{else}} Рейтинг / Голоса
                {{/if}}
            </td>
            <td id="col2" class="film-info-data">

                {{#if vote_average}} <span class="film-info-data vote-average">{{vote_average}}</span>
                {{else}} <span class="film-info-data vote-average-none">N/A</span>
                {{/if}}

                / {{ vote_count}}
            </td>
        </tr>
        <tr>
            <td class="film-info pop">
                {{#if lang }} Popularity
                {{else}} Популярность
                {{/if}}
            </td>
            <td class="film-info-data">{{popularity}}</td>
        </tr>
        <tr>
            <td class="film-info orig">
                {{#if lang }} Original Title
                {{else}} Оригинальное название
                {{/if}}
            </td>
            <td class="film-info-data original-title">{{original_title}}</td>
        </tr>
        <tr>
            <td class="film-info genre">
                {{#if lang }} Genre
                {{else}} Жанр
                {{/if}}
            </td>
            <td class="film-info-data genre"><span class="film-info-data-genre">{{genres}}</span>
            </td>
        </tr>
        <tr>
            <td class="film-info-trailer">
                <button class="button button-trailer" data-id="{{id}}">
                    <svg class="trailer-svg">
                        <use href="../images/symbol-defs.svg#icon-play3"></use>
                    </svg>
                    <span class="btn-text">

                        {{#if lang}} play trailer
                        {{else}} трейлер
                        {{/if}}

                    </span>
                </button>
            </td>

            <td class="film-info-social">
                <a href="https://www.facebook.com/sharer.php?display=page&u=https://www.themoviedb.org/movie/{{id}}&amp;text=Would%20you%20like%20to%20watch%20this%20movie%3F%20"
                    class="fb-btn" rel="nofollow" target="_blank">
                    <span class="fb-icon"></span></a>

                <a href="https://t.me/share?url=https://www.themoviedb.org/movie/{{id}}&amp;text=Would%20you%20like%20to%20watch%20this%20movie%3F%20"
                    class="tgme-btn" rel="nofollow" target="_blank">
                    <span class="tgme-icon"></span></a>


                <a href="https://api.whatsapp.com/send?text=https://www.themoviedb.org/movie/{{id}}&amp;text=Would%20you%20like%20to%20watch%20this%20movie%3F%20"
                    class="whatsapp-btn" rel="nofollow" target="_blank">
                    <span class="whatsapp-icon"></span></a>
            </td>

        </tr>
    </table>
    <div class="film-about">
        <p class="film-about-title">
            {{#if lang }} ABOUT
            {{else}} О фильме
            {{/if}}
        </p>
        <p class="film-about-text"> {{overview}} </p>
    </div>

    <div class="user-action-buttons">

        <button class="buttons action-watch active" type="button">
            {{#if lang }}add to Watched
            {{else}} добавить к просмотренным
            {{/if}}
        </button>

        <button class="buttons action-queue" type="button">
            {{#if lang}} add to queue
            {{else}} добавить в очередь
            {{/if}}
        </button>
    </div>
</div>